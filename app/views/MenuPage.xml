<Alloy>
	<Collection src="inspiration_model"></Collection>
	<Collection src="myMoneyGoals"></Collection>
	<Collection src="myCareerGoals"></Collection>
	<Collection src="myHealthGoals"></Collection>
	<Collection src="myRelationshipGoals"></Collection>
	<Collection src="mySelfCareGoals"></Collection>
	<Collection src="mySelfAwarenessGoals"></Collection>
	<Collection src="myGiveBackGoals"></Collection>
	
	<Window id="win" class="container" >
	
		<Label id="money" onClick="openMoney"></Label>
		<Label id="career" onClick="openMoney"></Label>
		<Label id="health" onClick="openMoney"></Label>
		<Label id="relationship" onClick="openMoney"></Label>
		<Label id="selfCare" onClick="openMoney"></Label>
		<Label id="selfAwareness" onClick="openMoney"></Label>
		<Label id="giveBack" onClick="openMoney"></Label>
		
		<ImageView id="image" onClick="openView"></ImageView>
		<TextField id="username" onReturn="saveName"></TextField>
		<Label id="userLabel" onClick="onUsernameClick"></Label>
		<ImageView id="buttonsImageBack"></ImageView>
		<Label id="buttonsImage" onClick="showCoreVal"></Label>
		<Button id="viewAch" onClick="showAchiev" class="myb">VIEW MY ACHIEVEMENTS</Button>
		<Button id="liftme" onClick="showAdvice"class="myb">LIFT ME UP</Button>
		<View id="loadImage">
			<Label id="setPicture">SET PROFILE PICTURE</Label>
			<Button id="load" onClick="loadImage">CHOOSE FROM LIBRARY</Button>
			<Button id="cancel" onClick="cancel">CANCEL</Button>
		</View>
		<View id="inspiration" onClick="hide">
			<Label id="advice"/>
		</View>
		<Menu id="menu" platform="android">
			<!-- Cannot specify node text.  Use attributes only. -->
			<MenuItem id="settings"
			onClick="showSettings"
			icon="/pignon.png"
			showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM"
			/>
		</Menu>
	</Window>
</Alloy>